@model CIS341_checkpoint3.Data.Entities.UserInformationItem

@{
    ViewData["Title"] = $"Edit :: {System.Security.SecurityElement.Escape(Model.Title)}";
    Layout = "_Layout";
}

@section PageCss
{
    <style>
        .grid-container {
            padding: 0px;
            margin-bottom: 0px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-gap: 0px;
        }

        div.right { text-align: right; }

        .btn-back { border: 1px dashed #000000; }

        .btn-back:hover { border: 1px solid #000000; }
    </style>
}

<h1>Edit</h1>

<h4>My Information Item</h4>
<hr/>
<div class="row">
    <div>
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <textarea rows="20" asp-for="Details" class="form-control"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <hr/>
            <div class="grid-container">
                <div>
                    <a class="btn btn-back" asp-action="Index">Back to List</a>
                </div>
                <div class="right">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary"/>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>