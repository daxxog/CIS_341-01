@model CIS341_lab7.Data.Entities.SharedInformationItem

@{
    ViewData["Title"] = $"Delete :: Shared Information Item :: {System.Security.SecurityElement.Escape(Model.Title)}";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewData["Title"]</title>
    <style>
        .grid-container {
            padding: 0px;
            margin-bottom: 0px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-gap: 0px;
        }

        div.right { text-align: right; }

        .btn-cancel { border: 1px dashed #000000; }

        .btn-cancel:hover { border: 1px solid #000000; }

        div.warning {
            padding: 2em;
            border: 1px dashed #FF0000;
            color: #FF0000;
        }
    </style>
</head>
<body>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<hr>
<div>
    <div>
        <h4><a class="breadcrumbs" asp-action="Index">Shared Information Item</a> :: @Html.DisplayFor(model => model.Title)</h4>
    </div>
    <hr/>
    <center>
        <div class="warning">
            <i>Warning: This will permanently destroy the object in the database!</i>
        </div>
    </center>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class="col-sm-10">
            <pre>@System.Security.SecurityElement.Escape(Model.Details)</pre>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <div class="grid-container">
            <div>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-cancel">Cancel</a>
            </div>
            <div class="right">
                <input type="submit" value="Delete" class="btn btn-danger"/>
            </div>
        </div>
    </form>
</div>
</body>
</html>